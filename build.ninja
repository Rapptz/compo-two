ninja_required_version = 1.3
builddir = bin
objdir = obj
cxx = g++
cxxpaths = -I. -Ilibs -Igame
cxxflags = -std=c++11 -pedantic -pedantic-errors -Wextra -Wall -O2 -DNDEBUG
linkerflags = -static -static-libstdc++
libs = -lsfml-graphics -lsfml-audio -lsfml-window -lsfml-network $
    -lsfml-system -lsfml-main -llua

rule compile
    command = $cxx -MMD -MF $out.d $cxxpaths $cxxflags -c $in -o $out
    deps = gcc
    depfile = $out.d
